<%- include('./partials/header.ejs') %>


<div class="container col-5 input-box">

    <form action="/edit" method="post">
        <div class="row mb-3 task-id">
            <p >Task ID<span class="ms-3"><%=taskId%></span> </p>

        </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Task</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="newTask" placeholder="<%=task%>">
            <input type="hidden" name="taskId" value="<%=taskId%>">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <div class="form-check">
                <label class="form-check-label" for="gridCheck1">
                    Completed
                </label>
                <input class="form-check-input" type="checkbox" id="gridCheck1">
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mx-auto">Edit</button>
    </form>

    </div>

<%- include('./partials/footer.ejs') %>